<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fb="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="magshimim.newzbay.entrance"
    android:background="@drawable/main_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NewzBay"
        android:textSize="78sp"
        android:id="@+id/tv_newzbay"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/nb"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_newzbay"
        android:textSize="25sp"
        android:text="All News, Just Use"
        android:layout_centerHorizontal="true"
        android:textColor="@color/nb"
        android:id="@+id/tv_EIOP"
        android:textStyle="bold" />

    <com.google.android.gms.common.SignInButton
        android:layout_width="wrap_content"
        android:layout_height="59dp"
        android:id="@+id/btn_Google"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/tv_EIOP"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/btn_NB"
        android:drawableLeft="@drawable/anchor_logo"
        android:text="@string/SignInAsGuest"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:layout_below="@+id/btn_Facebook"
        android:layout_marginTop="25dp"
        android:background="@drawable/button_rounded_corners"
        android:onClick="signInAsGuest"
        android:clickable="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/btn_Facebook"
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        fb:com_facebook_login_text="@string/SignInWithFacebook"
        fb:com_facebook_logout_text="@string/SignInWithFacebook"
        android:background="@drawable/button_rounded_corners_facebook"
        android:layout_marginTop="25dp"
        android:paddingBottom="23dp"
        android:paddingTop="23dp"
        android:layout_below="@+id/btn_Google"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
