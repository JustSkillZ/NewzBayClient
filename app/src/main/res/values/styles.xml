<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/nb</item>
        <item name="colorPrimaryDark">@color/nb</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme_NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/nb</item>
        <item name="colorPrimaryDark">@color/timeBar</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/nb</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
    </style>


</resources>
